# Use pnpm as the default package manager (this is just a convenience setting)
# pnpm will respect this setting
package-manager=pnpm

# Set registry for downloading packages (default is https://registry.npmjs.org/)
registry=https://registry.npmjs.org/

# Enable package-lock file creation for reproducible installs (default: true)
shamefully-hoist=true

# Disable strict enforcement of peer dependencies
strict-peer-dependencies=false

# Specify the store directory
store-dir=~/.pnpm-store

# Use lockfiles even when installing dependencies
lockfile=true

# Provenance information
provenance=true

# pnpm to ignore workspace root validation
ignore-workspace-root-check=true
